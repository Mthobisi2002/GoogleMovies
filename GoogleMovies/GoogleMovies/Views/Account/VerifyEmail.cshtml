@model VerifyEmailViewModel

<h2>Verify Your Email</h2>

@if (TempData["VerificationType"] != null)
{
    <div class="alert alert-success">@TempData["VerificationType"]</div>
}
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @Html.ValidationSummary(false, "Please address the following issues:")
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<form asp-action="VerifyEmail" method="post">
    <input type="hidden" asp-for="VerificationType" />
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Token"></label>
        <input asp-for="Token" class="form-control" />
        <span asp-validation-for="Token" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Verify Email</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script>
    setTimeout(function () {
        document.querySelector('.alert-success')?.remove();
    }, 5000);
</script>
