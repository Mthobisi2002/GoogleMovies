@{
    ViewData["Title"] = "Customer Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome Mr\Mrs Customer</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>


@model GoogleMovies.Models.HomeViewModel

<div class="text-white space-y-10">
    <!-- Trending Section -->
    <section>
        <h2 class="text-xl font-bold mb-4">Trending Now</h2>
        <partial name="_MovieCarousel" model="Model.Trending" />
    </section>

    <!-- Box Office Blockbusters -->
    <section>
        <h2 class="text-xl font-bold mb-4">Box Office Blockbusters</h2>
        <partial name="_MovieCarousel" model="Model.Blockbusters" />
    </section>

    <!-- Latest 2025 Movies -->
    <section>
        <h2 class="text-xl font-bold mb-4">Latest Movies of 2025</h2>
        <partial name="_MovieCarousel" model="Model.LatestMovies" />
    </section>
</div>


