@using Microsoft.AspNetCore.Http
@model List<Movie>

<form asp-controller="Admin" asp-action="SyncTrendingMovies" method="post">
    <button type="submit" class="btn btn-primary">Sync</button>
</form>
<h2>Movie List</h2>

@if (TempData["Errors"] != null)
{
    var errors = TempData["Errors"] as List<string>;
    if (errors != null && errors.Any())
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var error in errors)
                {
                    <li>@error</li>
                }
            </ul>
        </div>
    }
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

@if (TempData["Info"] != null)
{
        <div class="alert alert-info">
        @TempData["Info"]
        </div>
}
@if (TempData["Sync"] != null)
{
    <div class="alert alert-success">
        @TempData["Sync"]
    </div>
}


<div>
    <input type="text" id="searchBox" placeholder="Search by movie or cast name..." />
</div>

<div id="searchResults">
    <!-- Results will be dynamically added here -->
</div>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Genres</th>
            <th>Year</th>
            <th>Duration (min)</th>
            <th>Age Rating</th>
            <th>Rotten Tomatoes</th>
            <th>IsTrending</th>
            <th>BoxOffice</th>
            <th>Created Date</th>
            <th>Modified Date</th>
            <th>Actions</th>

        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            var movie = Model[i];
            <tr>
                <td>@(i + 1)</td>
                <td>@movie.Title</td>
                <td>@string.Join(", ", movie.MovieGenres.Select(mg => mg.Genre.Name))</td>
                <td>@movie.Year</td>
                <td>@movie.DurationMinutes</td>
                <td>@movie.AgeRating</td>
                <td>@($"{movie.RottenTomatoesRating}%")</td>
                <td>@movie.IsTrending</td>
                <td>@movie.BoxOffice</td>
                <td>@movie.CreatedDate</td>
                <td>@movie.ModifiedDate</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-warning btn-sm">Edit</a>
                    <form asp-action="Delete" asp-route-id="@movie.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Add" class="btn btn-primary">Add New Movie</a>

<script>
    const generalTable = document.querySelector("table.table"); // Your general movie list table
    const searchBox = document.getElementById("searchBox");
    const searchResults = document.getElementById("searchResults");

    searchBox.addEventListener("input", function () {
        const query = searchBox.value.trim();

        if (query.length === 0) {
            searchResults.innerHTML = ""; // Clear results when input is empty
            generalTable.style.display = "table"; // Show the general movie table
            return;
        }

        generalTable.style.display = "none"; // Hide the general movie table during search

        // Make an AJAX call to fetch search results
        fetch(`/Admin/SearchMoviesApi?query=${encodeURIComponent(query)}`)
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    const movies = data.data;
                    searchResults.innerHTML = ""; // Clear previous results

                    if (movies.length > 0) {
                        // Create the table for the search results
                        let table = document.createElement("table");
                        table.classList.add("table");

                        let tableHead = document.createElement("thead");
                        tableHead.innerHTML = `
                            <tr>
                                <th>#</th>
                                <th>Title</th>
                                <th>Genres</th>
                                <th>Year</th>
                                <th>Duration (min)</th>
                                <th>Age Rating</th>
                                <th>Rotten Tomatoes</th>
                                <th>IsTrending</th>
                                <th>BoxOffice</th>
                                <th>Created Date</th>
                                <th>Modified Date</th>
                                <th>Actions</th>
                            </tr>
                        `;
                        table.appendChild(tableHead);

                        let tableBody = document.createElement("tbody");

                        // Add each movie as a row in the table
                        movies.forEach((movie, index) => {
                            let row = document.createElement("tr");
                            row.innerHTML = `
                                <td>${index + 1}</td>
                                <td>${movie.title}</td>
                                <td>${movie.genres}</td>
                                <td>${movie.year}</td>
                                <td>${movie.durationMinutes}</td>
                                <td>${movie.ageRating}</td>
                                <td>${movie.rottenTomatoesRating}</td>
                                <td>${movie.IsTrending}</td>
                                <td>${movie.BoxOffice}</td>
                                <td>${movie.createdDate}</td>
                                <td>${movie.modifiedDate}</td>
                                <td>
                                    <a href="/Admin/Edit/${movie.id}" class="btn btn-warning btn-sm">Edit</a>
                                    <form action="/Admin/Delete/${movie.id}" method="post" style="display:inline;">
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</button>
                                    </form>
                                </td>
                            `;
                            tableBody.appendChild(row);
                        });

                        table.appendChild(tableBody);
                        searchResults.appendChild(table);
                    } else {
                        searchResults.innerHTML = "<p>No movies found.</p>";
                    }
                } else {
                    searchResults.innerHTML = `<p>${data.message}</p>`;
                }
            })
            .catch(error => {
                console.error("Error fetching search results:", error);
                searchResults.innerHTML = "<p>Error fetching search results.</p>";
            });
    });


</script>
